begin
	require "jeweler"
	Jeweler::Tasks.new do |gem|
		gem.name = "like_searchable_on"
		gem.summary = "Just a silly plugin to make models searchable on a list of fields"
		gem.email = "gk@groundswellent.com"
		gem.authors = [ "Gk Parish-Philp" ]
		gem.files = Dir[ "{lib}/**/*" ]
end
Jeweler::GemcutterTasks.new
rescue
	puts "Jeweler or dependency not available."
end